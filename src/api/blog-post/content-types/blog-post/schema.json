{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": "Blog posts for Real Estate Abroad"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 500
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "author_name": {
      "type": "string",
      "maxLength": 100,
      "default": "Real Estate Abroad Team"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Market Analysis",
        "Legal & Tax",
        "Investment Guide",
        "Country Guide",
        "Property News",
        "Financing",
        "Tips & Advice"
      ],
      "default": "Market Analysis"
    },
    "reading_time": {
      "type": "integer",
      "min": 1,
      "default": 5
    },
    "meta_title": {
      "type": "string",
      "maxLength": 60
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160
    },
    "keywords": {
      "type": "json"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "type": {
      "type": "enumeration",
      "enum": ["post", "news"],
      "default": "post"
    },
    "site_key": {
      "type": "string",
      "default": "realestateabroad",
      "maxLength": 50
    }
  }
}